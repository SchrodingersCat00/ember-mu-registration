<div class='feedback-message'>
  {{#if this.loading}}
    <span class='loading'>
      Registering...
    </span>
  {{/if}}
  {{#if this.errorMessage}}
    <span class='error-message'>
      {{this.errorMessage}}
    </span>
  {{/if}}
</div>
<form class='registration-form' {{on "submit" this.register}}>
  <div class='registration-form-name'>
    <label for='registration-form-name'>
      Name
    </label>
    <Input
      id='registration-form-name'
      placeholder='John Doe'
      @value={{this.name}}
    />
  </div>
  <div class='registration-form-nickname'>
    <label for='registration-form-nickname'>
      Username
    </label>
    <Input
      id='registration-form-nickname'
      placeholder='john.doe'
      @value={{this.nickname}}
    />
  </div>
  <div class='registration-form-password'>
    <label for='registration-form-password'>
      Password
    </label>
    <Input
      id='registration-form-password'
      @value={{this.password}}
      @type='password'
    />
  </div>
  <div class='registration-form-password-confirmation'>
    <label for='registration-form-password-confirmation'>
      Confirm password
    </label>
    <Input
      id='registration-form-password-confirmation'
      @value={{this.passwordConfirmation}}
      @type='password'
    />
  </div>
  <button>
    Register
  </button>
</form>