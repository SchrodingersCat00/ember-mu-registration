{{#if this.showFeedbackMsg}}
  <div class='feedback-message'>
    {{#if this.errorMsg}}
      <span class='error-message'>{{this.errorMsg}}</span>
    {{/if}}
  </div>
{{/if}}
<form {{on 'submit' this.changePassword}} class='change-password-form'>
  <div class='change-password-form-old-password'>
    <label for='change-password-form-old-password'>Old password</label>
    <Input
      id='change-password-form-old-password'
      @value={{this.oldPassword}}
      @type='password'
    />
  </div>
  <div class='change-password-form-new-password'>
    <label for='change-password-form-new-password'>New password</label>
    <Input
      id='change-password-form-new-password'
      @value={{this.newPassword}}
      @type='password'
    />
  </div>
  <div class='change-password-form-new-password-confirmation'>
    <label for='change-password-form-new-password-confirmation'>Confirm new
      password</label>
    <Input
      id='change-password-form-new-password-confirmation'
      @value={{this.newPasswordConfirmation}}
      @type='password'
    />
  </div>
  <button type='submit'>Change password</button>
</form>