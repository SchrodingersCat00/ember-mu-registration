{{#if this.showFeedbackMsg}}
  <div class='feedback-message'>
    {{#if this.loading}}
      <span class='loading'>Unregistering...</span>
    {{/if}}
    {{#if this.errorMsg}}
      <span class='error-message'>{{this.errorMsg}}</span>
    {{/if}}
  </div>
{{/if}}
<button type='button' {{on 'click' this.unregister}}>Unregister</button>